<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/headlinesFragment2">

    <fragment
        android:id="@+id/headlinesFragment2"
        android:name="com.example.thenewsapp.ui.fragment.HeadlinesFragment"
        android:label="Latest News" >
        <action
            android:id="@+id/action_headlinesFragment2_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment2"
        android:name="com.example.thenewsapp.ui.fragment.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment2_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>


    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.thenewsapp.ui.fragment.ArticleFragment"
        android:label="ArticleFragment"
        tools:ignore="DuplicateIds">
        <argument
            android:name="article"
            app:argType="com.example.thenewsapp.models.Article" />
    </fragment>
</navigation>
